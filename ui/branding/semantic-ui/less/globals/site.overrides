//
// Detail page
//

a {
  color: @linkColor;

  &:hover {
    color: @linkHoverColor;
    text-decoration: @linkHoverUnderline;
  }
}

a.accordion-title {
  text-decoration: none;

  p {
    .text-big();
    color: @black;
    display: flex;
    justify-content: space-between;
    line-height: normal;
    word-wrap: anywhere;

    span:hover {
      text-decoration: underline;
    }

    .accordion-dropdown-icon {
      display: inline-block;
      color: @blue;
      opacity: 1;
      width: initial;
      height: initial;
      transition: transform 0.1s ease, opacity 0.1s ease, color 0.1s ease;
      text-decoration: none;
    }
  }
}

a.logo-link {
  margin-left: 1rem;
  display: block;

  img {
    max-height: 3.5rem;
    height: 100%;
  }
}


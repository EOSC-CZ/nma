{#def funding_references, search_link #}

<div role="list" class='ui divided list'>
  {% for fr in array(funding_references) %}
  <div class="item">
    <ListItemField d={fr.award_title}>
      <SeparatedProperty d={fr.award_title} />
    </ListItemField>
    <ListItemField d={fr.local_identifier}>
      <SeparatedProperty d={fr.local_identifier} />
    </ListItemField>
    <ListItemField d={fr.funding_program}>
      <SeparatedProperty d={fr.funding_program} />
    </ListItemField>
    <ListItemField d={fr.funders}>
      <strong>{{ fr.funders._ui_label }}:</strong>
      <div role="list" class="list">
        {% for funder in array(fr.funders) %}
        <ListItemField d={funder.organization.name}>
          <SeparatedProperty d={funder.organization.name} />
        </ListItemField>
        <ListItemField d={funder.person.name}>
          <SeparatedProperty d={funder.person.name} />
        </ListItemField>
        {% endfor %}
      </div>
    </ListItemField>
  </div>
  {% endfor %}
</div>
{#def funding_references #}
<div role="list" class='ui divided relaxed ordered list'>
  {% for fr in array(funding_references) %}
  <div class="item">
    <h5 class="header rel-mb-1"><IValue value={fr.award_title or _("No award title")} /></h5>
    <ListItemField d={fr.local_identifier}>
      <SeparatedProperty d={fr.local_identifier} />
    </ListItemField>
    <ListItemField d={fr.funding_program}>
      <SeparatedProperty d={fr.funding_program} />
    </ListItemField>
    <ListItemField d={fr.funders}>
      <strong>{{ fr.funders._ui_label }}:</strong>
        {% for funder in array(fr.funders) %}
          <IValue value={funder.organization.name or null} />
          <IValue value={funder.person.name or null} />
            {{ ", " if not loop.last }}
        {% endfor %}
    </ListItemField>
  </div>
  {% endfor %}
</div>
{#def related_resources, record, search_link #}

{% set related_resources = array(related_resources) %}

<div role="list" class="ui divided list">
  {% for resource in related_resources %}
  <div class="item">
    <ListItemField d={resource.title}>
      <SeparatedProperty d={resource.title} />
    </ListItemField>
    <ListItemField d={resource.relation_type}>
      <SeparatedProperty d={resource.relation_type}>
        <VocabularyItem vocabulary={resource.relation_type} vocabulary_type="relation-types" search_link={record.links.search_link} searchFacet="metadata_related_resources_relation_type" />
      </SeparatedProperty>
    </ListItemField>
    <ListItemField d={resource.iri}>
      <SeparatedProperty d={resource.iri}>
        <IRI iri={resource.iri} />
      </SeparatedProperty>
    </ListItemField>
    <ListItemField d={resource.type}>
      <SeparatedProperty d={resource.type}>
        <VocabularyItem vocabulary={resource.type} vocabulary_type="resource-types" search_link={record.links.search_link} searchFacet="metadata_resource_type" />
      </SeparatedProperty>
    </ListItemField>
    <ListItemField d={resource.identifier}>
      <strong>{{ resource.identifier._ui_label }}:</strong>
      <div role="list" class="list">
        <ListItemField d={resource.identifier.iri}>
          <SeparatedProperty d={resource.identifier.iri}>
            <IRI iri={resource.identifier.iri} />
          </SeparatedProperty>
        </ListItemField>
        <ListItemField d={resource.identifier.identifier_scheme}>
          <SeparatedProperty d={resource.identifier.identifier_scheme} />
        </ListItemField>
        <ListItemField d={resource.identifier.value}>
          <SeparatedProperty d={resource.identifier.value} />
        </ListItemField>
      </div>
    </ListItemField>
    <ListItemField d={resource.time_references}>
      <strong>{{ resource.time_references._ui_label }}:</strong>
      <TimeReferences time_references={resource.time_references} search_link={search_link} />
    </ListItemField>
  </div>
  {% endfor %}
</div>
{#def related_resources, record, search_link #}
{% set related_resources = array(related_resources) %}
<div role="list" class="ui ordered relaxed divided list">
  {% for resource in related_resources %}
  <div class="item">
    {{ _("This dataset ") }}
    <VocabularyItem vocabulary={resource.relation_type} vocabulary_type="relation-types" capitalized={False} />
      <SeparatedProperty renderLabel={False}  d={resource.title}>
          <h5 class="header mb-5 mt-5"><IValue value={resource.title|string} /></h5>
      </SeparatedProperty>
      <SeparatedProperty renderLabel={False} d={resource.iri}>
        <IRI iri={resource.iri} />
      </SeparatedProperty>
      <SeparatedProperty renderLabel={False} d={resource.type}>
        ( <VocabularyItem vocabulary={resource.type} vocabulary_type="resource-types" searchFacet="metadata_resource_type" />{{- ")" }}
      </SeparatedProperty>
      <Identifiers identifiers={resource.identifiers} horizontal={True} copy={False} size="mini" />
    <ListItemField d={resource.time_references}>
      <strong>{{ resource.time_references._ui_label }}:</strong>
      <TimeReferences time_references={resource.time_references} search_link={search_link} />
    </ListItemField>
  </div>
  {% endfor %}
</div>
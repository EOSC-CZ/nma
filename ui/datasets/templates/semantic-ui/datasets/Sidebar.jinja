{#def metadata, record #}
<section aria-label="{{_('metadata/objectIdentifiers.label')}}" class="bottom-tab">
  <AccordionField label={_('metadata/objectIdentifiers.label')} title_class="detail-sidebar-header" label_class="detail-sidebar-title" active>
    <div class="ui link list">
      <div class="item">
        <i class="external alternate icon"></i>
        <div class="content">
          {% set _data = {
          "href": metadata.url,
          "title": _('metadata/originalRecord.label'),
          "label": _('metadata/originalRecord.label')
          } %}
          <URL className="header" data={_data}></URL>
        </div>
      </div>
    </div>
  </AccordionField>
</section>
<section id="export-record" aria-label="{{_('Export')}}" class="bottom-tab">
  <AccordionField label={_('Export')} title_class="detail-sidebar-header" label_class="detail-sidebar-title" active>
    <div class="ui link list">
      <div class="item">
        <i class="download link icon"></i>
        <div class="content">
          {% set _data = {
          "href": record.links.export_path|e ~ "/json",
          "title": _('Export') ~ ' JSON',
          "label": "JSON"
          } %}
          <URL className="header" data={_data}></URL>
        </div>
      </div>
    </div>
  </AccordionField>
</section>
<section aria-label="{{_('API') ~ ' ' ~ _('Links')}}" class="bottom-tab">
  <AccordionField label={_('API') ~ ' ' ~ _('Links')} title_class="detail-sidebar-header" label_class="detail-sidebar-title" active>
    <SidebarApiLinks links={record.links}></SidebarApiLinks>
  </AccordionField>
</section>
<section aria-label="{{_('Citations')}}">
  <AccordionField label={_('Citations')} title_class="detail-sidebar-header" label_class="detail-sidebar-title" active>
    <div class="ui list">
      <div class="item">
        <i class="quote right icon"></i>
        <div class="content">
          {% set _data = {
          "href": record.links.export_path|e ~ "/json",
          "title": _('Export') ~ ' JSON',
          "label": "JSON"
          } %}
          <URL className="header" data={_data}></URL>
        </div>
      </div>
    </div>
  </AccordionField>
</section>
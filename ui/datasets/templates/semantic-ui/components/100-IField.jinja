{# def d=True, label=None, placeholder=None, keep=false, label_class="ui field-data", data_class="ui field-data" #}

{%- if d is true or d._has_value or keep -%}
    <IBaseField label={label or d._ui_label} label_class={label_class} data_class={data_class}>
        {%- if content is not none and ((content is not string) or content.strip()) -%}
            {{ content }}
        {%- else -%}
            <IValue value={d._ui_value} />
        {%- endif -%}
    </IBaseField>
{%- elif placeholder -%}
    <IBaseField label={label or d._ui_label} label_class={label_class} data_class={data_class}>
        {{ placeholder }}
    </IBaseField>
{%- endif -%}
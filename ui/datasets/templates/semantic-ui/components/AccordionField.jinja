{#def label, accordion_class="", title_class="", label_class="", active=False #}
{% if content %}
<div class="ui fluid accordion {{accordion_class}}">
  <dt class="{{title_class}} {% if active %}active {% endif %}title">
    <a class="accordion-title">
      <p>
        <span class="{{label_class}}">{{label}}</span>
        <i class="chevron right icon accordion-dropdown-icon"></i>
      </p>
    </a>
  </dt>
  <dd class="{% if active %}active {% endif %}content">{{ content }}</dd>
</div>
{% endif %}
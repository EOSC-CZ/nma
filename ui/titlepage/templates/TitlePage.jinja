{%- extends "invenio_theme/frontpage.html" %}

{%- block page_header %}
{% include "header_frontpage.html" %}

{%- block navbar_title %}
{%- endblock navbar_title %}

{%- endblock page_header %}

{%- block page_body %}

{%- block intro_section %}
{%- endblock intro_section %}

{%- block bypasslinks %}
{%- endblock bypasslinks %}

{%- block top_banner %}
{%- endblock top_banner %}
{%- block grid_section %}
<div class="backdrop">
  <div class="ui main grid container rel-mt-2">
    <div class="ten wide column center aligned centered content-container">
        <div class="row">
        {% block main_column %}
        {% block main_column_content %}
        {%- block frontpage_search %}
        {%- block frontpage_title %}
        <h1 class="ui header frontpage-header hidden tablet computer only">{{ _(config.THEME_SITENAME)|upper }}</h1>
        <h1 class="ui header hidden mobile only">{{ _(config.THEME_SITENAME)|upper }}</h1>
        <h2 class="ui small header frontpage-subtitle">{{ _(config.REPOSITORY_DESCRIPTION) }}</h2>
        <span class="ui label pink"><i class="search icon"></i>{{ _("Easily discover, search, and explore metadata records from public and research data providers.") }}</span>
        {%- endblock frontpage_title %}
        </div>
        {%- block frontpage_form %}
        <div class="row rel-mt-5">
          <div class="eighteen wide mobile eight wide computer column center aligned">
          <form action="{{ url_for('datasets.search') }}" class="ui form" role="search">
            <div id="frontpage-search-input" class="ui fluid action input search-input">
              <input type="text" name="q" class="form-control" placeholder="{{ _('Search') }}">
              <button type="submit" class="ui icon search button" aria-label="{{ _('Search') }}"><i
                  class="search icon"></i>
              </button>
            </div>
          </form>
          </div>
        </div>
        <div class="row rel-mt-1">
          <a href="{{ url_for('datasets.search') }}" class="right-floated">{{ _('Show all records') }}</a>
        </div>
        {%- endblock frontpage_form %}
        {%- endblock frontpage_search %}
        {% endblock main_column_content %}

        {% endblock main_column %}
      </div>
  </div>
</div>
{%- endblock grid_section %}

{%- block bottom_section %}
{%- endblock bottom_section %}

{%- endblock page_body %}